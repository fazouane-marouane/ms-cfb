{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "typeRoots": ["./node_modules/@types/"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "build-node",
    "dist"
  ],
  "compileOnSave": false
}
